{
  "manifest_version": 3,
  "name": "Auto Reloader Link",
  "version": "2.4",
  "description": "Auto reload Fiverr pages with countdown, infinite cycle, and link switching.",
  "permissions": ["tabs", "scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Reloader Link",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
