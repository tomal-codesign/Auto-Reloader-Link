{
  "manifest_version": 3,
  "name": "Multi-Tab Auto Reloader with Link",
  "version": "3.0",
  "description": "Reload multiple Auto Reloader Link tabs with independent countdowns and link switching.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Reloader with Link",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}